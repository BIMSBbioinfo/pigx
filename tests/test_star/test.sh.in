#!/bin/sh

testfolder=${srcdir}/tests/test_star

# copy necessary input files to the test folder
# we copy them to avoid re-creating these files when testing the pipeline
cp -r ${srcdir}/tests/sample_data/preprocessed/trimmed_reads ${testfolder}

settings=${srcdir}/tests/settings.yaml
tmp_settings=${srcdir}/tests/settings.test_star.yaml
cat ${settings} | sed 's/output-dir:.*/output-dir: test_star/g' > ${tmp_settings}

samplesheet=${srcdir}/tests/sample_sheet.csv
tmp_samplesheet=${srcdir}/tests/sample_sheet.test_star.csv
head -n 2 ${samplesheet} > ${tmp_samplesheet}

${builddir}/pigx-rnaseq -s ${tmp_settings} --target star_map ${tmp_samplesheet}

rm ${tmp_settings} ${tmp_samplesheet}

rm -rf ${testfolder}/trimmed_reads

if ! test -f ${srcdir}/tests/test_star/mapped_reads/HBR_Rep1_Aligned.sortedByCoord.out.bam
then
  echo "ERROR: failed the STAR mapping test"
  exit 1
fi
 

