locations:
  output-dir: output/
  reads-dir: reads/
  sample-sheet: sample_sheet.csv
  tempdir:

annotation:
  primary:
    genome:
      name: hg19
      fasta: hg19_chr19.10094960.25108012.fa
    gtf: hg19_chr19.10094960.25108012.gtf
  # The secondary annotation is optional
  secondary:

covariates: 'replicate'

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    stack: 128M
    contact-email: none
    args: ''
  rules:
    __default__:
      threads: 1
      memory: 8G
    link_primary_annotation:
      threads: 1
      memory: 4G
    combine_reference:
      threads: 1
      memory: 4G
    make_star_reference:
      threads:  8
      memory: 40G
    combine_gtf:
      threads: 1,
      memory: 4G
    fasta_dict:
      threads:  1
      memory: 2G
    change_gtf_id:
      threads:  1
      memory: 4G
    gtf_to_refflat:
      threads:  1
      memory: 30G
    merge_fastq_to_bam:
      threads:  1
      memory: 2G
    tag_cells:
      threads:  8
      memory: 35G
    tag_molecules:
      threads:  8
      memory: 35G
    filter_bam:
      threads:  1
      memory: 10G
    trim_starting_sequence:
      threads:  1
      memory: 10G
    trim_polya:
      threads:  1
      memory: 10G
    sam_to_fastq:
      threads:  1
      memory: 10G
    map_star:
      threads:  4
      memory: 32G
    sort_aligned:
      threads:  1
      memory: 5G
    merge_bam:
      threads:  1
      memory: 5G
    tag_with_gene_exon:
      threads:  1
      memory: 5G
    extract_read_statistics:
      threads:  1
      memory: 8G
    bam_tag_histogram:
      threads:  1
      memory: 64G
    find_absolute_read_cutoff:
      threads:  1
      memory: 8G
    get_umi_matrix:
      threads:  1
      memory: 8G
    get_reads_matrix:
      threads:  1
      memory:  8G
    extract_downstream_statistics:
      threads:  1
      memory: 8G
    bam_to_BigWig:
      threads:  1
      memory: 16G
    fastqc:
      threads:  1
      memory: 16G

tools:
  picard:
    executable: @PICARDJAR@
  droptools:
    executable: @DROPSEQJAR@
    genes_per_cell: 10
    num_core_barcodes: 10
  fastqc:
    executable: @FASTQC@
  star:
    executable: @STAR@
  java:
    executable: @JAVA@
  perl:
    executable: @PERL@
  python:
    executable: @PYTHON@
  cat:
    executable: @CAT@
  rm:
    executable: @RM@
  Rscript:
    executable: @RSCRIPT@
    args: "--vanilla"

# ---------------------------------------------------------------------------- #
# HARDCODED adapter parameters
# This variable extands the pipeline to various technologies. It defines
# The locations of cell and UMI adapters in fastq1
# Currently supprorted technologies are dropseq, chromium10x, and 1cellbio
# base_min/max define the position of the adapters in the fastq file
adapter_parameters:
    dropseq:
        cell_barcode:
            base_min: 1
            base_max: 12
        umi_barcode:
            base_min: 13
            base_max: 20

    chromium10x:
        cell_barcode:
            base_min: 1
            base_max: 16
        umi_barcode:
            base_min: 17
            base_max: 26

    ICell8:
        cell_barcode:
            base_min: 1
            base_max: 11
        umi_barcode:
            base_min: 12
            base_max: 25

    CEL-Seq2:
        cell_barcode:
            base_min: 7
            base_max: 12
        umi_barcode:
            base_min: 1
            base_max: 6
