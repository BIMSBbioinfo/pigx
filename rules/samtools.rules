#######################################
#
#
# Samtools rules
# ===============
#
#	 Rules that operate on SAM and BAM files,
#	 like sorting, indexing and conversion 
# 
#######################################

# "GTOOLBOX": "~/.guix-profile/bin/",

# SAMTOOLS = GTOOLBOX+config["progs"]["SAMTOOLS"] 


rule bam_index:
	input:
		"{sample}.bam"
	output:
		"{sample}.bam.bai"
	shell:
		"{SAMTOOLS} index {input}"


rule bam_sort:
	input:
		"{sample}.bam"
	output:
		"{sample}.sorted.bam"
	shell:
		"{SAMTOOLS} sort -o {output} -O BAM {input}"


rule sam_to_bam:
	input:
		"{sample}.sam"
	output:
		"{sample}.bam"
	shell:
		"{SAMTOOLS} view -Sbh {input} > {output}"

