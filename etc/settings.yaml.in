locations:
  output-dir: output/
  reads-dir: reads/
  sample-sheet: sample_sheet.csv
  tempdir:

annotation:
  primary:
    genome:
      name: hg19
      fasta: hg19_chr19.10094960.25108012.fa
    gtf: hg19_chr19.10094960.25108012.gtf
  # The secondary annotation is optional
  secondary:

covariates: 'replicate'

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    memory: 8G
    stack: 128M
    queue: all
    contact-email: none
  rules:
    __default__:
      threads: 1
      memory: 8G

tools:
  picard:
    executable: @PICARDJAR@
  droptools:
    executable: @DROPSEQJAR@
    genes_per_cell: 10
    num_core_barcodes: 10
  fastqc:
    executable: @FASTQC@
  star:
    executable: @STAR@
  java:
    executable: @JAVA@
  perl:
    executable: @PERL@
  python:
    executable: @PYTHON@
  cat:
    executable: @CAT@
  rm:
    executable: @RM@
  Rscript:
    executable: @RSCRIPT@
    args: "--vanilla"

# ---------------------------------------------------------------------------- #
# HARDCODED adapter parameters
# This variable extands the pipeline to various technologies. It defines
# The locations of cell and UMI adapters in fastq1
# Currently supprorted technologies are dropseq and chromium10x
# base_min/max define the position of the adapters in the fastq file
adapter_parameters:
  dropseq:
    cell_barcode:
      base_min: 1
      base_max: 12
    umi_barcode:
      base_min: 13
      base_max: 20

  chromium10x:
    cell_barcode:
      base_min: 1
      base_max: 16
    umi_barcode:
      base_min: 17
      base_max: 26
