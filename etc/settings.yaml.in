locations:
  reads-dir: /path/to/reads/
  output-dir: /path/to/output/
  genome-fasta: /path/to/genome.fasta
  gtf-file: /path/to/sample.gtf

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    memory: 8G
    stack: 128M
    queue: all
    contact-email: none
  rules:
    __default__:
      threads: 1
      memory: 8G
    star_index:
      threads: 8
      memory: 4G
    salmon_index:
      threads: 8
      memory: 4G
    salmon_quant:
      threads: 8
      memory: 4G
    star_map:
      threads: 8
      memory: 4G

organism: hsapiens

#DEanalyses:
