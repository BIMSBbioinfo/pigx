tools:
  fastqc:
    executable: @FASTQC@
  multiqc:
    executable: @MULTIQC@
  star:
    executable: @STAR@
    cores: 8
    memory: 32G
  trim-galore:
    executable: @TRIMGALORE@
  bamCoverage:
    executable: @BAMCOVERAGE@
  samtools:
    executable: @SAMTOOLS@
  htseq-count:
    executable: @HTSEQ_COUNT@
  salmon:
    executable: @SALMON@
    cores: 8
    memory: 32G
  R:
    Rscript: @RSCRIPT@
    executable: @R@
