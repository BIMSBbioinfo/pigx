locations:
  input-dir: in/
  output-dir: out/
  genome-dir: genome/
  index-dir:
  gff-file:

general:
  assembly: 
  params:
    extend: 
    scale_bw:
    bowtie2:
        k:
    idr:
        idr-threshold: 
    macs2:
        g:
        keep-dup:
        q:
    extract_signal:
        expand_peak:
        bin_num:

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    memory: 8G
    stack: 128M
    contact-email: none
  rules:
    __default__:
      threads:   1
      memory:    8G
    annotate_peaks:
      threads:   1
      memory:    16G
    bam2bed:
      threads:   1
      memory:    16G
    bam2bigWig:
      threads:   1
      memory:    16G
    bedTobigBed:
      threads:   1 
      memory:    8G
    bowtie2:
      threads:   2
      memory:    16G
    bowtie2_build:
      threads:   1
      memory:    32G
    chipqc:
      threads:   1
      memory:    8G
    extract_signal_annotation:
      threads:   1
      memory:    16G
    extract_signal_peaks:
      threads:   1
      memory:    16G
    fastqc:
      threads:   1
      memory:    8G
    feature_combination:
      threads:   1
      memory:    8G
    idr:
      threads:   1
      memory:    8G
    index_to_chrlen:
      threads:   1
      memory:    1G
    link_annotation:
      threads:   1 
      memory:    16G
    make_ucsc_hub:
      threads:   1 
      memory:    8G
    samtools_sort:
      threads:   4
      memory:    16G
    samtools_index:
      threads:   1 
      memory:    8G
    macs2:
      threads:   1 
      memory:    16G
    prepare_annotation:
      threads:   1 
      memory:    16G
    sort_peak:
      threads:   1 
      memory:    8G

tools:
    fastqc: 
        executable: @FASTQC@
        args: ""
    bamToBed: 
        executable: @BAMTOBED@
        args: ""
    bowtie2: 
        executable: @BOWTIE2@
        args: ""
        help: '-h'
        remove:
             - S
             - x
             - 1
             - 2
             - U
    bowtie2-build: 
        executable: @BOWTIE2_BUILD@
        args: ""
    bowtie2-inspect: 
        executable: @BOWTIE2_INSPECT@
        args: ""
    idr: 
        executable: @IDR@
        args: ""
        help: '-h'
        remove:
            - samples
            - input-file-type
            - rank
            - output-file
            - l
            - plot
    macs2: 
        executable: @MACS2@
        args: ""
        help: 'callpeak -h'
        remove:
            - t
            - c
            - outdir
            - n
    perl: 
        executable: @PERL@
        args: ""
    Rscript: 
        executable: @RSCRIPT@
        args: ""
    samtools: 
        executable: @SAMTOOLS@
        args: ""
    python: 
        executable: @PYTHON@
        args: ""
    bedToBigBed:
        executable: @BEDTOBIGBED@
        args: ""

