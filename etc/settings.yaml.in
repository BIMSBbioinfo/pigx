locations:
  input-dir: in/
  output-dir: out/
  genome-dir: genome/

general:
  genome-version: hg19
  methylation-calling:
    minimum-coverage: 0
    minimum-quality: 10
  differential-methylation:
    cores: 20
    treatment-groups:
      - ['0', '1']

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    memory: 8G
    stack: 128M
    queue: all
    contact-email: none

tools:
  fastqc:
    executable: @FASTQC@
    args: ""
  trim-galore:
    executable: @TRIMGALORE@
    args: ""
  cutadapt:
    executable: @CUTADAPT@
    args: ""
  bowtie2:
    executable: @BOWTIE2@
    args: ""
  bismark:
    executable: @BISMARK@
    args: " -N 0 -L 20 "
    cores: 3
    memory: 19G
  deduplicate-bismark:
    executable: @DEDUPLICATE_BISMARK@
    args: ""
  bismark-genome-preparation:
    executable: @BISMARK_GENOME_PREPARATION@
    args: ""
  samtools:
    executable: @SAMTOOLS@
    args: ""
  R:
    Rscript: @RSCRIPT@
    executable: @R@
    args: ""
