locations:
  output-dir: output
  reads-dir: reads
  reference-fasta: NC_045512.2.fasta
  amplicons-bed: nCoV-2019_NCref.bed
  kraken-db-dir: databases/kraken
  krona-db-dir: databases/krona
  sigmut-db-dir: databases/sigmut
  vep-db-dir: databases/vep

# These settings are used to filter raw reads when trimming. Reads
# that are shorter than the product of read-length( the lengths in
# basepairs) and the cut-off factor are removed.
trimming:
  read-length: 150
  cut-off: 0.8

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    stack: 128M
    queue: all
    contact-email: none
    args: ''
  rules:
    __default__:
      threads: 1
      memory: 4G

tools:
  bwa:
    executable: @BWA@
    args: ""
  fastqc:
    executable: @FASTQC@
    args: ""
  multiqc:
    executable: @MULTIQC@
    args: ""
  Rscript:
    executable: @RSCRIPT@
    args: "--vanilla --no-environ"
  samtools:
    executable: @SAMTOOLS@
    args: ""
  prinseq:
    executable: @PRINSEQ@
    args: ""
  kraken2:
    executable: @KRAKEN2@
    args: ""
  import_krona:
    executable: @IMPORT_KRONA@
    args: ""
  import_taxonomy:
    executable: @IMPORT_TAXONOMY@
    args: ""
  lofreq:
    executable: @LOFREQ@
    args: ""
  python:
    executable: @PYTHON@
    args: ""
  vep:
    executable: @VEP@
    args: ""
  gunzip:
    executable: @GUNZIP@
    args: "--keep"
  gzip:
    executable: @GZIP@
    args: ""