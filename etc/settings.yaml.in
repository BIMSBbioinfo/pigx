locations:
  input-dir: in/
  output-dir: out/
  genome-dir: genome/

general:
  assembly: hg19
  methylation-calling:
    minimum-coverage: 10
    minimum-quality: 10
  differential-methylation:
    cores: 1
    qvalue: 0.01
    difference: 25
    treatment-groups:
      - []
    annotation:
      CpGfile:    "pigx_work/refGenome/cpgIslandExt.hg19.bed.gz"
      refGenes_bedfile: "pigx_work/refGenome/refGene.hg19.bed.gz"
      webfetch:   no

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    missing-file-timeout: 120
    stack: 128M
    contact-email: none
  rules:
    __default__:
      threads: 1
      memory: 10G
    bismark_align_and_map_se:
      threads: 6
      memory: 19G
    bismark_align_and_map_pe:
      threads: 12
      memory: 19G
    bismark_genome_preparation:
      threads: 2 
      memory: 19G
    diffmeth:
      threads: 1
      memory: 30G

tools:
  fastqc:
    executable: @FASTQC@
    args: ""
  trim-galore:
    executable: @TRIMGALORE@
    args: ""
  cutadapt:
    executable: @CUTADAPT@
    args: ""
  bowtie2:
    executable: @BOWTIE2@
    args: ""
  bismark:
    executable: @BISMARK@
    args: " -N 0 -L 20 "
    cores: 3
  deduplicate-bismark:
    executable: @DEDUPLICATE_BISMARK@
    args: ""
  bismark-genome-preparation:
    executable: @BISMARK_GENOME_PREPARATION@
    args: ""
  samtools:
    executable: @SAMTOOLS@
    args: ""
  bowtie2-inspect:
    executable: @BOWTIE2_INSPECT@
    args: ""
  Rscript:
    executable: @RSCRIPT@
    args: "--vanilla"
