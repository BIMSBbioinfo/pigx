locations:
  reads-dir: /path/to/reads/
  output-dir: /path/to/output/
  genome-fasta: /path/to/genome.fasta
  gtf-file: /path/to/sample.gtf

execution:
  submit-to-cluster: no
  jobs: 6
  nice: 19
  cluster:
    memory: 8G
    stack: 128M
    queue: all
    contact-email: none
  rules:
    __default__:
      threads: 1
      memory: 8G
    star_index:
      threads: 8
      memory: 32G
    salmon_index:
      threads: 8
      memory: 32G
    salmon_quant:
      threads: 8
      memory: 32G

organism: hsapiens

#list of the differential expression analyses to be done 
DEanalyses:
  analysis1:
      output_prefix: "test_pigx" #Prefix to prepend to the file name of the resulting output file
      case_sample_groups: "HBR" #comma-separated list of sample names - treated as the 'case' group
      control_sample_groups: "UHR" #comma-separated list of sample names - treated as the 'control' group
      covariates: '' # comma separated list of additional co-variates to control for 
                     # in differential expression analysis (e.g. batch, age, temperature, sequencing_technology etc.). 
                     # Must correspond to a column field in the sample_sheet.csv file.)

tools:
  fastqc:
    executable: @FASTQC@
  multiqc:
    executable: @MULTIQC@
  star:
    executable: @STAR@
    cores: 8
    memory: 32G
  trim-galore:
    executable: @TRIMGALORE@
  bamCoverage:
    executable: @BAMCOVERAGE@
  samtools:
    executable: @SAMTOOLS@
  htseq-count:
    executable: @HTSEQ_COUNT@
  salmon:
    executable: @SALMON@
    cores: 8
    memory: 32G
  R:
    Rscript: @RSCRIPT@
    executable: @R@
